{
	"title": "Hello Message Resource",
	"$schema": "http://json-schema.org/draft-04/hyper-schema#",
	"definitions": {
		"hello": {
			"id": "#hello",
			"type": "object",
			"properties": {
				"msg": {
					"type": "string"
				},
				"lang": {
					"type": "string"
				}
			}
		}
	},
	"links": [
		{
			"rel": "instances",
			"method": "GET",
			"href": "/hello",
			"targetSchema": {
				"type": "array",
				"items": {
					"$ref": "#hello"
				}
			}
		},
		{
			"rel": "self",
			"method": "GET",
			"href": "/hello/{lang}",
			"targetSchema": {
				"$ref": "#hello"
			}
		},
		{
			"rel": "create",
			"method": "POST",
			"href": "/hello",
			"schema": {
				"type": "object",
				"properties": {
					"msg": {
						"type": "string"
					},
					"lang": {
						"type": "string"
					}
				},
				"required": [
					"msg",
					"lang"
				]
			}
		},
		{
			"rel": "delete_hello",
			"method": "DELETE",
			"href": "/hello/{lang}"
		}
	]
}